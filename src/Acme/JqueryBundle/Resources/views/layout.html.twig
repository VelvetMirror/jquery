<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            <link rel="stylesheet" href="{{ asset('bundles/acmejquery/css/style.css') }}" type="text/css" media="all" />
            <title>{% block title %}JQuery{% endblock %}</title>
            <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
            <script type="text/javascript" src=" {{ asset('bundles/acmejquery/js/jquery-1.6.1.js') }}"></script> 
        {% endblock %}
    </head>
    <body>
        <div id="symfony-wrapper">
            {% if app.session.flash('notice') %}
            <div class="flash-message">
                <em>Notice</em>: {{ app.session.flash('notice') }}
            </div>
            {% endif %}

            {% block content_header %}
            <ul id="menu">
                    {% block content_header_more %}
                <li><a href="{{ path('homepage') }}">Home</a></li>
                    {% endblock %}
            </ul>

            <div style="clear: both"></div>
            {% endblock %}

            <div class="symfony-content">
                {% block content %}
                {% endblock %}
            </div>

            {% if code is defined %}
            <h2>Code behind this page</h2>
            <div class="symfony-content">{{ code|raw }}</div>
            {% endif %}
        </div>
    </body>
</html>
