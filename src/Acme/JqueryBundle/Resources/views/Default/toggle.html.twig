{% extends "AcmeJqueryBundle::layout.html.twig" %}

{% block head %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function(){
            $("button").click(function(){
                $("p#toggle").toggleClass("main");
            });
        });            
    </script>        
    <style type="text/css">
    .main
    {
        font-size:120%;
        color:red;
    }
    </style>
{% endblock %}

{% block content %}
    <h1>Toogle class</h1>
    
    <p id="toggle">This is a foo paragraph</p>
    <button>Toogle class "main" for p element</button>
{% endblock %}
    
{% set code = code(_self) %}