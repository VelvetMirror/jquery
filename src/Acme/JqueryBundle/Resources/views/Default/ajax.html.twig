{% extends "AcmeJqueryBundle::layout.html.twig" %}

{% block head %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function(){
          $("button").click(function(){
            $("div.ajax").load("{{ asset('bundles/acmejquery/test.txt') }}");
            $("div.ajax").load("{{ asset('bundles/acmejquery/test.txt') }}");
          });
        });            
    </script>        
{% endblock %}

{% block content %}
    <h1>Ajax</h1>
    
    <div class="ajax">Let AJAX change this text</div>
    <button>Change Content</button>
{% endblock %}
    
{% set code = code(_self) %}